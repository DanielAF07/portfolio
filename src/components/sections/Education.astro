---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const formatMonthShort = (date: string) => {
          return new Date(date).toLocaleString('es-MX', { month: 'short' });
        };

        const startYear = new Date(startDate).getFullYear();
        const startMonth = formatMonthShort(startDate);

        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual";
        const endMonth = endDate != null ? formatMonthShort(endDate) : "";

        let years = `${startMonth} ${startYear} - ${endMonth ? `${endMonth} ${endYear}` : endYear}`;
        if (startDate === null) years = '';
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
